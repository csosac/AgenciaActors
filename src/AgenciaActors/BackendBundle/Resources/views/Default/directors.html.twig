{% extends "AgenciaActorsBackendBundle:Default:index.html.twig " %}
{% block title %}Categories{% endblock %}
{% block page_content %}
    <h4>{{ titol }}</h4>
    <table id="mytable" class="table table-bordred table-striped">
        <thead>
            <th>ID</th>
            <th>NIF</th>
            <th>name</th>
            <th>lastName</th>
            <th>Editar</th>
            <th>Eliminar</th>
        </thead>
        <tbody>
            {% for director in directors %}
                <tr>
                    <th>{{ director.id }}</th>
                    <td>{{ director.nif|upper }}</td>
                    <td>{{ director.name|upper }}</td>
                    <td>{{ director.lastName|upper }}</td>
                    <td><p data-placement="top" data-toggle="tooltip" title="Editar"><a href="{{ path('agencia_actors_backend_add_director') }}" class="btn btn-primary btn-xs" data-title="Editar"  data-target="#edit"><span class="glyphicon glyphicon-pencil"></span></p></td>
                    <td><p data-placement="top" data-toggle="tooltip" title="Eliminar"><button class="btn btn-danger btn-xs" data-title="Eliminar" data-toggle="modal" data-target="#delete" ><span class="glyphicon glyphicon-trash"></span></button></p></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <div class="row">
        <div class="col-sm-12 col-lg-12 col-md-12">
            <a href="{{ path('agencia_actors_backend_add_director') }}" class="btn btn-info" role="button">Afegir Director</a>
        </div>
    </div>
{% endblock %}