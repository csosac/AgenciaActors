{% extends "AgenciaActorsBackendBundle:Default:index.html.twig " %}

{% block page_content %}
    {% if is_granted('ROLE_USER') or is_granted('ROLE_ADMIN') %}
        HAS ENTRADO!
        {{app.user.username}} {{ app.user.roles }}     
 
    {%endif%}
 
    <form action="{{ path('login_check') }}" method="post">
        <label for="username">Username:</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" />
 
        <label for="password">Password:</label>
        <input type="password" id="password" name="_password" />
 
        {#
            Si quieres controlar la url a la que el usuario 
            es redirigido al enviar correctamente el formulario
            <input type="hidden" name="_target_path" value="/account" />
        #}
 
        <button type="submit">login</button>
    </form>


    <div class="row">
        <div class="col-sm-12 col-lg-12 col-md-12">
            <a href="{{ path('agencia_actors_backend_user_registration') }}" class="btn btn-info" role="button">Registrarse</a>
        </div>
    </div>
{% endblock %}

